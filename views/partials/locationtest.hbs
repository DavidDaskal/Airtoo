<html>

<style>
       #map {
        height: 400px;
        width: 100%;
       }
</style>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<p>Click the button to get your coordinates.</p>




<button onclick="getLocation(locationTriage)">Show Map</button>

<div id="map"></div>
</html>

<script>
var latitude;
var longitude
var map = $("#map");
var navtrue;

if (navigator.geolocation) {
  navtrue = true;
}
else {
  navtrue = false;
}


function initMap(latitude,longitude) {
        var uluru = {lat: latitude, lng: longitude};
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 14,
          center: uluru
        });
        var marker = new google.maps.Marker({
          position: uluru,
          map: map
        });
      }

function fallBackLocation(){

  $.getJSON("http://ip-api.com/json/?callback=?", function(data) {
              
           
                pos = {
                      lat: data.lat,
                      lng: data.lon
                    }
                console.log('coords from fallback location: '+pos);

                initMap(pos.lat,pos.lng);
           
        });


}
// test if navigator.geolocation fails to produce coordinates use fallback option
// load map once coordinates are established

function locationTriage(pos){
if (!pos) {
  map.html("Could not receive coordinates at this time. Please try again later.")
}
else if (pos!=='error'){
  console.log(pos)
  initMap(pos.lat,pos.lng);
  }
else {
  fallBackLocation();
  }
}

function getLocation(callback) {

  function showPosition(position) {

    pos = {
      lat: position.coords.latitude,
      lng: position.coords.longitude
    }
    return callback(pos);
  }

  function error(){
    return callback('error');
  }



  loadImage = '<img src="https://media.giphy.com/media/3ohhwFhUCOXOJfuttC/giphy.gif">'

  map.html(loadImage);
    if (navtrue) {

        var options = {
          enableHighAccuracy: true,
          timeout: 5000,
          maximumAge: 0
        };

        navigator.geolocation.getCurrentPosition(showPosition,error,options);
    } else { 
        map.html("Geolocation is not supported by this browser.");
    }

} // End of getLocation()




</script>
